@inherits LayoutComponentBase

<div class="app-shell">
    <header class="app-header shadow-sm">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-secondary me-2 d-md-none" @onclick="ToggleSidebar" aria-label="Toggle sidebar">
                    <span class="bi bi-list"></span>
                </button>
                <a class="navbar-brand mb-0 h1" href="">RecipeApp</a>
            </div>

            <div class="d-flex align-items-center gap-2">
                <a class="btn btn-sm btn-outline-primary" href="recipes">My Recipes</a>
                <a class="btn btn-sm btn-outline-secondary" href="register">Register</a>
            </div>
        </div>
    </header>

    <div class="app-body container-fluid">
        <div class="row g-0">
            <aside class="col-12 col-md-3 col-lg-2 border-end sidebar px-0 @(_sidebarCollapsed ? "collapsed" : "")">
                <div class="sidebar-inner p-3">
                    <NavMenu />
                </div>
            </aside>

            <main class="col content-area p-4">
                <div class="content-wrapper">
                    @Body
                </div>
            </main>
        </div>
    </div>

    <footer class="app-footer text-muted border-top py-2">
        <div class="container d-flex justify-content-between">
            <small>Â© @DateTime.Now.Year RecipeApp</small>
            <small class="text-muted">Built with Blazor</small>
        </div>
    </footer>
</div>

@code {
    private bool _sidebarCollapsed = false;
    private void ToggleSidebar() => _sidebarCollapsed = !_sidebarCollapsed;
}