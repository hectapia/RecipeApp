@page "/register"
@using System.ComponentModel.DataAnnotations
@inject NavigationManager Nav
@inject IHttpClientFactory ClientFactory

<h3>Register</h3>

<EditForm Model="@model" OnValidSubmit="@RegisterAsync">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>Email</label>
        <InputText @bind-Value="model.Email" />
    </div>
    <div>
        <label>Display name</label>
        <InputText @bind-Value="model.DisplayName" />
    </div>
    <div>
        <label>Password</label>
        <InputText @bind-Value="model.Password" Type="password" />
    </div>

    <button type="submit">Create account</button>
    @if (!string.IsNullOrEmpty(error))
    {
        <p style="color:red">@error</p>
    }
</EditForm>

@code {
    private RegisterModel model = new();
    private string? error;

    public class RegisterModel
    {
        [Required, EmailAddress] public string Email { get; set; } = string.Empty;
        [Required] public string DisplayName { get; set; } = string.Empty;
        [Required, MinLength(6)] public string Password { get; set; } = string.Empty;
    }

    private async Task RegisterAsync()
    {
        try
        {
            var client = ClientFactory.CreateClient();
            client.BaseAddress = new Uri(Nav.BaseUri);
            var res = await client.PostAsJsonAsync("/auth/register", model);
            if (res.IsSuccessStatusCode)
            {
                Nav.NavigateTo("/recipes", true);
            }
            else
            {
                error = await res.Content.ReadAsStringAsync();
            }
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }
}
